<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        tools:context=".ResumeDetailActivity">

        <!-- The primary full-screen view. This can be replaced with whatever view
             is needed to present your content, e.g. VideoView, SurfaceView,
             TextureView, etc. -->
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:keepScreenOn="true"
            android:textColor="#9ab7e4"
            android:textSize="50sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/all_file"
            android:layout_below="@+id/tv_name"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:fitsSystemWindows="true"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/desc_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="UselessParent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10px"
                    android:keepScreenOn="true"
                    android:text="性别:"
                    android:textSize="50px"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_width="200px"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10px"
                    android:keepScreenOn="true"
                    android:textSize="50px"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10px"
                    android:keepScreenOn="true"
                    android:text="职位:"
                    android:textSize="50px"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_job"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:gravity="right"
                    android:keepScreenOn="true"
                    android:textSize="50px"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginTop="20px"
                android:layout_marginRight="20px"
                android:layout_marginBottom="20px"
                android:background="@drawable/divider_style"
                android:fitsSystemWindows="true"
                android:orientation="vertical"></LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:background="#f5f5f5"
                android:orientation="vertical"
                tools:ignore="UselessParent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:layout_marginBottom="10px"
                    android:keepScreenOn="true"
                    android:text="个人简介"
                    android:textColor="#000000"
                    android:textSize="70px"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_desc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:keepScreenOn="true"
                    android:textSize="50px"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginTop="20px"
                android:layout_marginRight="20px"
                android:layout_marginBottom="20px"
                android:background="@drawable/divider_style"
                android:fitsSystemWindows="true"
                android:orientation="vertical"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/work_exp_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10px"
                    android:layout_marginBottom="10px"
                    android:background="@drawable/exp_text_style"
                    android:keepScreenOn="true"
                    android:text="l 工作经验"
                    android:textColor="#7398d8"
                    android:textSize="100px"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/work_exp_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/work_exp_text"
                    android:background="@drawable/exp_key_style"
                    android:fadeScrollbars="true"
                    android:orientation="vertical"></LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginTop="20px"
                android:layout_marginRight="20px"
                android:layout_marginBottom="20px"
                android:background="@drawable/divider_style"
                android:fitsSystemWindows="true"
                android:orientation="vertical"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/project_exp_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10px"
                    android:layout_marginBottom="10px"
                    android:background="@drawable/exp_text_style"
                    android:keepScreenOn="true"
                    android:text="l 项目经验"
                    android:textColor="#7398d8"
                    android:textSize="100px"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/project_exp_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/exp_key_style"
                    android:orientation="vertical"></LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginTop="20px"
                android:layout_marginRight="20px"
                android:layout_marginBottom="20px"
                android:background="@drawable/divider_style"
                android:fitsSystemWindows="true"
                android:orientation="vertical"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/practice_exp_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:layout_marginBottom="10px"
                    android:background="@drawable/exp_text_style"
                    android:keepScreenOn="true"
                    android:text="l 实习经验"
                    android:textColor="#7398d8"
                    android:textSize="100px"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/practice_exp_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/exp_key_style"
                    android:orientation="vertical"></LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginTop="20px"
                android:layout_marginRight="20px"
                android:layout_marginBottom="20px"
                android:background="@drawable/divider_style"
                android:fitsSystemWindows="true"
                android:orientation="vertical"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:orientation="vertical"
                tools:ignore="UselessParent">

                <TextView
                    android:id="@+id/study_exp_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10px"
                    android:layout_marginBottom="10px"
                    android:background="@drawable/exp_text_style"
                    android:keepScreenOn="true"
                    android:text="l 教育经历"
                    android:textColor="#7398d8"
                    android:textSize="100px"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/study_exp_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/exp_key_style"
                    android:orientation="vertical"></LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:orientation="vertical"
                tools:ignore="UselessParent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="20px"
                    android:layout_marginRight="20px"
                    android:layout_marginBottom="20px"
                    android:background="@drawable/divider_style"
                    android:fitsSystemWindows="true"
                    android:orientation="vertical"></LinearLayout>
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:orientation="vertical"
            tools:ignore="UselessParent">
            <TextView
                android:id="@+id/hobby_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:layout_marginBottom="10px"
                android:background="@drawable/exp_text_style"
                android:keepScreenOn="true"
                android:text="l 兴趣爱好"
                android:textColor="#7398d8"
                android:textSize="100px"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/hobby_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginTop="20px"
                android:layout_marginRight="20px"
                android:layout_marginBottom="20px"
                android:background="@drawable/divider_style"
                android:fitsSystemWindows="true"
                android:orientation="vertical"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:orientation="vertical"
                tools:ignore="UselessParent">
                <TextView
                    android:id="@+id/honor_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:layout_marginBottom="10px"
                    android:background="@drawable/exp_text_style"
                    android:keepScreenOn="true"
                    android:text="l 荣誉"
                    android:textColor="#7398d8"
                    android:textSize="100px"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/honor_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginTop="20px"
                android:layout_marginRight="20px"
                android:layout_marginBottom="20px"
                android:background="@drawable/divider_style"
                android:fitsSystemWindows="true"
                android:orientation="vertical"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:id="@+id/cert_layout"
                android:orientation="vertical"
                tools:ignore="UselessParent">
                <TextView
                    android:id="@+id/cert_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:layout_marginBottom="10px"
                    android:background="@drawable/exp_text_style"
                    android:keepScreenOn="true"
                    android:text="l 证书"
                    android:textColor="#7398d8"
                    android:textSize="100px"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/cert_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginTop="20px"
            android:layout_marginRight="20px"
            android:layout_marginBottom="20px"
            android:background="@drawable/divider_style"
            android:fitsSystemWindows="true"
            android:orientation="vertical"></LinearLayout>
        <TextView
            android:id="@+id/tv_auth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_marginBottom="40px"
            android:layout_below="@+id/all_file"
            android:gravity="center"
            android:keepScreenOn="true"
            android:text="作者:21260720024 葛永晖 "
            android:textColor="#d6d9d1"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>
</ScrollView>